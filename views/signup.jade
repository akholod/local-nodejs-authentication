extends layout

block content
    nav.navbar.navbar-default.navbar-static-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Hello World
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li.active
                        a(href='/') Main
                    li
                        a(href='html/admin.html') Profile
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='/login') Войти
                    li
                        a(href='/signup') Регистрация

    .container
        h1.text-center Sign Up page
        form.form-horizontal(action='/signup' name='signup' method='post')
            .form-group
                label.col-sm-3.control-label(for='email') Email
                .col-sm-9
                    input#email.form-control(type='email', name='email' , placeholder='Email')
            .form-group
                label.col-sm-3.control-label(for='password') Password
                .col-sm-9
                    input#password.form-control(type='password', name='password', placeholder='Password')
            .form-group
                label.col-sm-3.control-label(for='inputPasswordConfirm') Confirm Password
                .col-sm-9
                    input#inputPasswordConfirm.form-control(type='password', placeholder='Confirm your Password')
            .form-group
                .col-sm-offset-3.col-sm-9
                    button.btn.btn-info(type='submit') Sign Up
