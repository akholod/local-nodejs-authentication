extends layout

block content
    nav.navbar.navbar-default.navbar-static-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Hello World
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li.active
                        a(href='/') Main
                    li
                        a(href='html/admin.html') Profile
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='/login') Войти
                    li
                        a(href='/signup') Регистрация

    .container
        h1.text-center Log In page
        form.form-horizontal
            .form-group
                label.col-sm-3.control-label(for='inputEmail') Email
                .col-sm-9
                    input#inputEmail.form-control(type='email', placeholder='Email')
            .form-group
                label.col-sm-3.control-label(for='inputPassword') Password
                .col-sm-9
                    input#inputPassword.form-control(type='password', placeholder='Password')
            .form-group
                .col-sm-offset-3.col-sm-9
                    button.btn.btn-success(type='submit') Log In
