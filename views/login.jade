extends layout

block content
    .container
        h1.text-center Log In page
        form.form-horizontal(action='/login' name='login' method='post')
            .form-group
                label.col-sm-3.control-label(for='inputEmail') Email
                .col-sm-9
                    input#inputEmail.form-control(type='email', name='email', placeholder='Email')
            .form-group
                label.col-sm-3.control-label(for='inputPassword') Password
                .col-sm-9
                    input#inputPassword.form-control(type='password', name='password', placeholder='Password')
            .form-group
                .col-sm-offset-3.col-sm-9
                    button.btn.btn-success(type='submit') Log In
        .row
            if (message.length)
                p.alert.alert-warning.text-center= message
